
@model Application.Services.Product.Querise.IGetProductForIndexService.GetProductForIndexDto

@{
    ViewData["Title"] = "";
}

<div class="uni-banner">
    <div class="container-fluid container-large">
        <div style="text-align:center;" class="uni-banner-text-area">
            <h2>جزئیات محصول</h2>
            <ul>
                <li><a href="/">خانه</a></li>
                <li>جزئیات محصول</li>
            </ul>
        </div>
    </div>
</div>

<div class="product-details ptb-100">
    <div class="container">
        <div class="product-details-top-area">
            <div class="row">
                <div class="col-lg-6">
                    <div class="product-info-image-area">
                        <img src="~/content/product/@Model.ProductMainPicture" alt="@Model.ProductName">
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="product-details-info-area pl-20">
                        <h3>@Model.ProductName</h3>



                        <div class="sidebar-card sidebar-download mt-30">
                            <h4>ویژگی های محصول</h4>
                            <div class="pdit-list">
                                <div class="pdit-list">
                                    <ul>
                                        @foreach (var item in Model.ProductAttributes)
                                        {
                                            <li><span>@item.AttributeName:</span> @item.AttributeNameContent</li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>



                        <a class="default-button" href="/contact"><span>مشاوره و سفارش محصول <i class="flaticon-cart"></i></span></a>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="product-description bg-f9f9f9 pb-100">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="product-description-area pt-70">
                    <nav>
                        <div class="nav nav-tabs" id="nav-tab" role="tablist">
                            <button class="nav-link active" id="nav-description-tab" data-bs-toggle="tab" data-bs-target="#nav-description" type="button" role="tab" aria-controls="nav-description" aria-selected="true">توضیحات</button>
                        </div>
                    </nav>
                    <div class="tab-content" id="nav-tabContent">
                        <div class="tab-pane fade show active" id="nav-description" role="tabpanel" aria-labelledby="nav-description-tab">
                            <div style="word-wrap:break-word;" class="pd-description">
                                <p>@Model.ProductDescription.</p>
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="products ptb-100">
    <div class="container">
        <div class="default-section-title default-section-title-middle">
            <span>آخرین محصولات</span>
            <h3>آخرین محصولات</h3>
        </div>
        <div class="section-content">
            <div class="row justify-content-center">
                @foreach (var item in Model.LastProduct)
                {
                    <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6 col-12">
                        <a asp-controller="product" asp-action="Detail" asp-route-id="@item.ProductId">
                            <div class="team-card-2">
                                <div class="team-card-img ">
                                    <img class="team-card-img-size" src="~/content/product/@item.ProductMainPicture" alt="@item.ProductName">
                                </div>
                                <div class="team-card-text-2">
                                    <div class="team-card-text-intro">
                                        <h4>@item.ProductName</h4>
                                    </div>
                                    <div class="social-icons">
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>

                }

            </div>

        </div>
    </div>
</div>
